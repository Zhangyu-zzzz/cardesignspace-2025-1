    },
    
    onImageLoad() {
      // å›¾ç‰‡åŠ è½½å®Œæˆ
    },
    
    onImageError(event) {
      // å›¾ç‰‡åŠ è½½å¤±è´¥ï¼Œå¯ä»¥è®¾ç½®é»˜è®¤å›¾ç‰‡
      event.target.src = '/default-avatar.svg'
    }
  }
}
