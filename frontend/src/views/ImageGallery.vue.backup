  },
  data() {
    return {
      images: [],
      brands: [],
      loading: false,
      hasMore: true,
      page: 1,
      limit: 20,
      totalImages: 0,
      filteredCount: 0,
      optimizingImages: false, // å›¾ç‰‡ä¼˜åŒ–çŠ¶æ€
      initialLoading: true, // åˆå§‹åŠ è½½çŠ¶æ€
      
      // ç­›é€‰æ¡ä»¶
      filters: {
        modelType: '',
        brandId: '',
        angles: '',
        types: '',
        tagSearch: '',
        exteriorStyles: '',
        interiorStyles: ''
      },
      
      // é¢„è®¾æ ‡ç­¾
      angleTags: ['æ­£å‰', 'æ­£ä¾§', 'æ­£å', 'å‰45', 'å45', 'ä¿¯ä¾§', 'é¡¶è§†'],
      imageTypeTags: ['å¤–å‹', 'å†…é¥°', 'é›¶éƒ¨ä»¶', 'å…¶ä»–'],
      
      // å¤–å‹é£æ ¼æ ‡ç­¾
      exteriorStyleTags: [],
      
      // å†…é¥°é£æ ¼æ ‡ç­¾
      interiorStyleTags: [],
      
      // çƒ­é—¨æ ‡ç­¾
