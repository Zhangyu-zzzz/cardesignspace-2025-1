/* pages/model-detail/model-detail.wxss */
.model-detail-page {
  min-height: 100vh;
  background-color: #f5f5f5;
}

.model-header {
  background-color: #ffffff;
  padding: 40rpx;
  margin-bottom: 20rpx;
}

.model-name {
  font-size: 40rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.model-brand {
  font-size: 28rpx;
  color: #999;
  display: block;
  margin-bottom: 20rpx;
}

.model-description {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  display: block;
}

.images-section {
  padding: 30rpx;
  background-color: #ffffff;
}

.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 30rpx;
}

.images-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.image-item {
  width: 100%;
  aspect-ratio: 1;
  border-radius: 16rpx;
  overflow: hidden;
  background-color: #f5f5f5;
}

.image {
  width: 100%;
  height: 100%;
}

