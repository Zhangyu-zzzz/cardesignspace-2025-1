/* pages/image-gallery/image-gallery.wxss */
.image-gallery-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
}

.images-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 10rpx;
}

.image-item {
  width: 100%;
  aspect-ratio: 1;
  border-radius: 8rpx;
  overflow: hidden;
  background-color: #f5f5f5;
  position: relative;
}

.image {
  width: 100%;
  height: 100%;
  display: block;
}

.image-placeholder {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f5f5f5;
}

.placeholder-text {
  font-size: 24rpx;
  color: #999;
}

.load-more-container {
  padding: 40rpx 0;
}

.load-more,
.no-more {
  text-align: center;
  padding: 20rpx 0;
  color: #999;
  font-size: 28rpx;
}

