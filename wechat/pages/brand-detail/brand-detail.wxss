/* pages/brand-detail/brand-detail.wxss */
.brand-detail-page {
  min-height: 100vh;
  background-color: #f5f5f5;
}

.brand-header {
  background-color: #ffffff;
  padding: 40rpx;
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.brand-logo-large {
  width: 200rpx;
  height: 200rpx;
  margin-right: 30rpx;
  background-color: #f5f5f5;
  border-radius: 16rpx;
}

.brand-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.brand-name {
  font-size: 40rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10rpx;
}

.brand-country {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.brand-description {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.models-section {
  padding: 30rpx;
  background-color: #ffffff;
}

.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 30rpx;
}

.models-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.loading-hint {
  padding: 40rpx 0;
  text-align: center;
}

.loading-text {
  font-size: 26rpx;
  color: #666;
}

.model-card {
  background-color: #f5f5f5;
  border-radius: 16rpx;
  overflow: hidden;
}

.model-image {
  width: 100%;
  height: 300rpx;
  background-color: #e0e0e0;
}

.model-info {
  padding: 20rpx;
}

.model-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.empty-container {
  padding: 40rpx 0;
  text-align: center;
}

.empty-text {
  font-size: 26rpx;
  color: #999;
}

.load-more-container {
  padding: 30rpx 0;
  text-align: center;
}

.load-more-text {
  font-size: 26rpx;
  color: #999;
}

