      // æ¨¡æ€æ¡†
      showImageModal: false,
      selectedImage: null,
      
      // é˜²æŠ–
      searchTimeout: null
    }
  },
  
  async mounted() {
    try {
      // ä¼˜åŒ–ï¼šå…ˆåŠ è½½å›¾ç‰‡åˆ—è¡¨ï¼Œå†å¹¶è¡ŒåŠ è½½ç­›é€‰é€‰é¡¹
      await this.loadImages()
      
      // åˆå§‹åŠ è½½å®Œæˆï¼Œæ˜¾ç¤ºå›¾ç‰‡
      this.initialLoading = false
      
      // å¹¶è¡ŒåŠ è½½ç­›é€‰é€‰é¡¹ï¼ˆä¸é˜»å¡å›¾ç‰‡æ˜¾ç¤ºï¼‰
      const initPromises = [
        this.loadBrands(),
        this.loadStyleTags(),
        this.loadPopularTags()
      ]
      
      // å¼‚æ­¥æ‰§è¡Œï¼Œä¸ç­‰å¾…å®Œæˆ
      Promise.all(initPromises).catch(error => {
        console.warn('ç­›é€‰é€‰é¡¹åŠ è½½å¤±è´¥:', error)
      })
      
    } catch (error) {
      console.error('åˆå§‹åŒ–åŠ è½½å¤±è´¥:', error)
      this.initialLoading = false
    }
    
    // æ·»åŠ æ»šåŠ¨ç›‘å¬
    window.addEventListener('scroll', this.handleScroll)
  },
  
  beforeDestroy() {
    window.removeEventListener('scroll', this.handleScroll)
  },
  
  methods: {
    async loadBrands() {
      try {
        const response = await apiClient.get('/upload/brands')
        this.brands = response.data || []
      } catch (error) {
        console.error('åŠ è½½å“ç‰Œå¤±è´¥:', error)
      }
    },
    
    async loadStyleTags() {
      try {
        const response = await apiClient.get('/image-tags/style-tag-options')
        const styleOptions = response.data
        
        // åˆ†åˆ«æå–å¤–å‹é£æ ¼å’Œå†…é¥°é£æ ¼æ ‡ç­¾
        this.exteriorStyleTags = styleOptions['å¤–å‹é£æ ¼'] || []
        this.interiorStyleTags = styleOptions['å†…é¥°é£æ ¼'] || []
      } catch (error) {
        console.error('åŠ è½½é£æ ¼æ ‡ç­¾å¤±è´¥:', error)
      }
    },
    
    async loadPopularTags() {
      try {
        console.log('å¼€å§‹åŠ è½½çƒ­é—¨æ ‡ç­¾...')
        const response = await apiClient.get('/image-gallery/popular-tags', {
          params: { limit: 15 }
        })
        console.log('çƒ­é—¨æ ‡ç­¾APIå“åº”:', response)
        this.popularTags = response.data || []
        console.log('è®¾ç½®çš„çƒ­é—¨æ ‡ç­¾:', this.popularTags)
      } catch (error) {
        console.error('åŠ è½½çƒ­é—¨æ ‡ç­¾å¤±è´¥:', error)
      }
    },
    
    async loadImages(reset = true) {
      if (this.loading) return
      
      if (reset) {
        this.images = []
        this.page = 1
        this.hasMore = true
      }
      
      this.loading = true
      
      try {
        // å°†å•ä¸ªå€¼è½¬æ¢ä¸ºæ•°ç»„ä¼ é€’ç»™åç«¯
        const angles = this.filters.angles ? [this.filters.angles] : []
        const types = this.filters.types ? [this.filters.types] : []
        const styleTags = []
        
        if (this.filters.exteriorStyles) {
          styleTags.push(this.filters.exteriorStyles)
        }
        if (this.filters.interiorStyles) {
          styleTags.push(this.filters.interiorStyles)
        }
        
        const params = {
          page: this.page,
          limit: this.limit,
          modelType: this.filters.modelType,
          brandId: this.filters.brandId,
          angles: angles,
          types: types,
          tagSearch: this.filters.tagSearch,
          styleTags: styleTags
        }
        
        const response = await apiClient.get('/image-gallery/images', { params })

        const batch = (response && response.data && response.data.images) ? response.data.images : []
        
        // åç«¯å·²ç»æä¾›äº†displayUrlï¼Œæ— éœ€é¢å¤–å¤„ç†
        if (reset) {
          this.images = batch
          this.totalImages = response.data.pagination.total
          this.filteredCount = response.data.pagination.filteredCount
        } else {
          this.images.push(...batch)
        }

        // ä¼˜åŒ–ï¼šåç«¯å·²ç»æ‰¹é‡å¤„ç†äº†å˜ä½“URLï¼Œæ— éœ€å‰ç«¯å†æ¬¡è¯·æ±‚
        // å¦‚æœéœ€è¦æ›´é«˜è´¨é‡çš„å›¾ç‰‡ï¼Œå¯ä»¥å»¶è¿ŸåŠ è½½
        this.optimizeImageQuality(batch)

        this.hasMore = batch.length === this.limit
        this.page++
        
      } catch (error) {
        console.error('åŠ è½½å›¾ç‰‡å¤±è´¥:', error)
        this.$message.error('åŠ è½½å›¾ç‰‡å¤±è´¥')
      } finally {
        this.loading = false
      }
    },

    // hydrateBestUrlsæ–¹æ³•å·²åºŸå¼ƒ - åç«¯ç°åœ¨ç›´æ¥æä¾›displayUrl
    // async hydrateBestUrls(images) {
    //   // æ­¤æ–¹æ³•ä¸å†éœ€è¦ï¼Œå› ä¸ºåç«¯å·²ç»æä¾›äº†displayUrl
    // },

    // ä¼˜åŒ–å›¾ç‰‡è´¨é‡çš„æ–¹æ³•ï¼ˆå»¶è¿ŸåŠ è½½é«˜è´¨é‡å›¾ç‰‡ï¼‰
    async optimizeImageQuality(images) {
      if (!images || images.length === 0) return
      
      this.optimizingImages = true
      
      try { console.log('optimizeImageQuality:start', images.length) } catch (e) {}
      
      // å»¶è¿Ÿå¤„ç†ï¼Œè®©é¦–å±å…ˆæ˜¾ç¤º
      setTimeout(async () => {
        try {
          // åç«¯å·²ç»æä¾›äº†displayUrlï¼Œæ— éœ€é¢å¤–å¤„ç†
          // å¦‚æœéœ€è¦æ›´é«˜è´¨é‡çš„å›¾ç‰‡ï¼Œå¯ä»¥å»¶è¿ŸåŠ è½½
          console.log('å›¾ç‰‡è´¨é‡ä¼˜åŒ–å®Œæˆï¼Œåç«¯å·²æä¾›displayUrl')
        } catch (error) {
          console.warn('å›¾ç‰‡è´¨é‡ä¼˜åŒ–å¤±è´¥:', error)
        } finally {
          this.optimizingImages = false
        }
      }, 500) // 500mså»¶è¿Ÿï¼Œç¡®ä¿é¦–å±å·²æ¸²æŸ“
    },
    
    handleScroll() {
      const scrollTop = window.pageYOffset || document.documentElement.scrollTop
      const windowHeight = window.innerHeight
      const documentHeight = document.documentElement.scrollHeight
      
      // å½“æ»šåŠ¨åˆ°åº•éƒ¨æ—¶åŠ è½½æ›´å¤š
      if (scrollTop + windowHeight >= documentHeight - 100 && this.hasMore && !this.loading) {
        this.loadImages(false)
      }
    },
    

    
    clearFilters() {
      this.filters = {
        modelType: '',
        brandId: '',
        angles: '',
        types: '',
        tagSearch: '',
        exteriorStyles: '',
        interiorStyles: ''
