/* pages/profile/profile.wxss */
.profile-page {
  min-height: 100vh;
  background-color: #f5f5f5;
}

.not-login {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 60vh;
}

.not-login-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.not-login-text {
  font-size: 32rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.profile-content {
  padding: 30rpx;
}

.user-card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 40rpx;
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-right: 30rpx;
  background-color: #f5f5f5;
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.user-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10rpx;
}

.user-email {
  font-size: 28rpx;
  color: #999;
}

.edit-btn {
  padding: 16rpx 32rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #666;
}

.menu-list {
  background-color: #ffffff;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  overflow: hidden;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.menu-text {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.menu-arrow {
  font-size: 28rpx;
  color: #999;
}

.logout-section {
  padding: 30rpx;
}

.logout-btn {
  width: 100%;
}

