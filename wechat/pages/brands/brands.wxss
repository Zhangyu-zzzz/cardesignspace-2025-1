/* pages/brands/brands.wxss */
.brands-page {
  min-height: 100vh;
  background-color: #f5f5f5;
}

.search-section {
  padding: 20rpx;
  background-color: #ffffff;
  margin-bottom: 20rpx;
}

.search-input {
  width: 100%;
  padding: 20rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.brands-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  padding: 20rpx;
}

.brand-card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.brand-logo {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
}

.brand-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.brand-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
  text-align: center;
}

.brand-country {
  font-size: 24rpx;
  color: #999;
  text-align: center;
}

