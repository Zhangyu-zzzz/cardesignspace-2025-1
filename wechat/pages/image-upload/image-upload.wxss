/* pages/image-upload/image-upload.wxss */
.upload-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 30rpx;
}

.upload-form {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 40rpx;
}

.form-item {
  margin-bottom: 40rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  display: block;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.picker {
  padding: 24rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333;
}

.image-picker {
  width: 100%;
  height: 400rpx;
  border: 2rpx dashed #e0e0e0;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.preview-image {
  width: 100%;
  height: 100%;
}

.picker-placeholder {
  color: #999;
  font-size: 28rpx;
}

.upload-btn {
  width: 100%;
  margin-top: 40rpx;
}

