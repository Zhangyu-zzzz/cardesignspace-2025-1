/* pages/image-gallery/image-gallery.wxss */
.image-gallery-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
}

.images-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 10rpx;
}

.image-item {
  width: 100%;
  aspect-ratio: 1;
  border-radius: 8rpx;
  overflow: hidden;
  background-color: #f5f5f5;
}

.image {
  width: 100%;
  height: 100%;
}

.load-more,
.no-more {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
  font-size: 28rpx;
}

